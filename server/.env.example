# Server Configuration
PORT=3000

# Environment
NODE_ENV=development

# Authentication - CHANGE THESE VALUES FOR PRODUCTION
# Admin password for accessing the admin panel
ADMIN_PASSWORD=your_secure_password_here

# Session secret - MUST be at least 32 characters for security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=generate_random_secret_key_here_min_32_chars

# Security Configuration
# Allowed origins for CORS (comma-separated). Leave empty for same-origin only.
# Example: https://your-domain.com,https://www.your-domain.com
CORS_ALLOWED_ORIGINS=

# Salt for OAuth token encryption key derivation (optional, has a default)
OAUTH_ENCRYPTION_SALT=

# Set to true if running behind HTTPS in production
HTTPS=false

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Image Processing
IMAGE_QUALITY=85
MAX_RESOLUTION_WIDTH=1920
MAX_RESOLUTION_HEIGHT=1080

# Slideshow Configuration
DEFAULT_SLIDESHOW_INTERVAL=15000

# Random Image Configuration
MAX_RECENT_IMAGES=10
IMAGE_CACHE_EXPIRY=60000

# Default Folders
DEFAULT_FOLDERS=family,vacation,holidays,misc

# Google Photos Configuration
# Set to 'true' to enable Google Photos integration, 'false' to disable
ENABLE_GOOGLE_PHOTOS=false
GOOGLE_CLIENT_ID=client_id
GOOGLE_CLIENT_SECRET=client_secret
GOOGLE_REDIRECT_URI=redirect_uri

# Security Notes:
# - Never commit this file with actual secrets to version control
# - SESSION_SECRET should be unique and at least 32 characters
# - Use bcrypt hash for ADMIN_PASSWORD in production
# - Enable HTTPS=true when running behind reverse proxy with SSL
# - Configure ALLOWED_ORIGINS to restrict access in production
# - Rate limiting is automatic for all endpoints
# - CSRF protection is enabled by default